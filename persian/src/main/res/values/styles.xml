<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="PersianDialogWindowTheme">
        <item name="android:windowClipToOutline">false</item>
    </style>

    <style name="PersianFloatingDialogTheme">
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="PersianFloatingDialogWindowTheme">
        <item name="android:windowClipToOutline">false</item>
        <item name="android:dialogTheme">@style/PersianFloatingDialogTheme</item>
    </style>

    <style name="PersianEdgeToEdgeFloatingDialogWindowTheme">
        <item name="android:dialogTheme">@style/PersianEdgeToEdgeFloatingDialogTheme</item>
    </style>

    <style name="PersianEdgeToEdgeFloatingDialogTheme" parent="android:Theme.DeviceDefault.Dialog">
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="27">
            @integer/persian_window_layout_in_display_cutout_mode
        </item>
        <item name="android:windowClipToOutline">false</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowElevation">0dp</item>
    </style>
    <!-- "shortEdges" Value for windowLayoutInDisplayCutoutMode. Needed for APIs 27-29. -->
    <integer name="persian_window_layout_in_display_cutout_mode">1</integer>
</resources>